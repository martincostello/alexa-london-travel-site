@page "/account/register"
@model MartinCostello.LondonTravel.Site.Pages.Account.Register
@{
    ViewBag.MetaDescription = SR.RegisterMetaDescription;
    ViewBag.Title = SR.RegisterTitle;
}
@await Html.PartialAsync("_SignInErrors")
<div class="row">
    <div class="col-md-12">
        <section>
            <h2>@SR.RegisterSubtitle</h2>
            <p class="lead">
                @SR.RegisterLead
            </p>
            <blockquote class="blockquote">
                <p>
                    <em>
                        @SR.CommuteSkillInvocation
                    </em>
                </p>
            </blockquote>
            <p>
                @SR.RegisterParagraph1
            </p>
            <p>
                @SR.RegisterParagraph2
            </p>
            <p>
                @SR.RegisterParagraph3
                <ul>
                    <li>
                        <a asp-page="@SiteRoutes.PrivacyPolicy" class="small" rel="noopener" title="@SR.PrivacyPolicyLinkAltText" data-ga-label="Privacy Policy (Register)">
                            @SR.PrivacyPolicyLinkText
                        </a>
                    </li>
                    <li>
                        <a asp-page="@SiteRoutes.TermsOfService" class="small" rel="noopener" title="@SR.TermsOfServiceLinkAltText" data-ga-label="Terms of Service (Register)">
                            @SR.TermsOfServiceLinkText
                        </a>
                    </li>
                </ul>
            </p>
            <p>
                @SR.RegisterParagraph4(Model!.RegisteredUsers)
            </p>
        </section>
    </div>
</div>
<hr />
<h4>
    @SR.RegisterSignInSubtitle
</h4>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-4">
        <section>
            @await Html.PartialAsync("_SignInForm")
        </section>
    </div>
</div>
@await Html.PartialAsync("_SignInModal")
