{
  "name": "london-travel-site",
  "private": true,
  "version": "8.0.0",
  "description": "The companion site for the London Travel Amazon Alexa skill",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint",
    "compile": "webpack",
    "format": "prettier --write assets/**/*.ts && stylelint --fix assets/*/*.css",
    "format-check": "prettier --check assets/**/*.ts && stylelint assets/*/*.css",
    "lint": "eslint --ext .ts assets",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/alexa-london-travel-site.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@stylistic/eslint-plugin-js": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "mini-css-extract-plugin": "^2.9.0",
    "moment": "^2.30.1",
    "prettier": "^3.3.2",
    "style-loader": "^4.0.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "ts-loader": "^9.5.1",
    "tsify": "^5.0.4",
    "typescript": "^5.5.2",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-remove-empty-scripts": "^1.0.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@stylistic/js",
      "@typescript-eslint"
    ],
    "rules": {
      "@stylistic/js/quotes": [
        "error",
        "single"
      ],
      "@typescript-eslint/indent": "error",
      "@typescript-eslint/member-delimiter-style": "error",
      "@typescript-eslint/naming-convention": "error",
      "@typescript-eslint/prefer-namespace-keyword": "error",
      "@typescript-eslint/semi": [
        "error",
        "always"
      ],
      "@typescript-eslint/type-annotation-spacing": "error",
      "brace-style": [
        "error",
        "1tbs"
      ],
      "eqeqeq": [
        "error",
        "smart"
      ],
      "id-blacklist": [
        "error",
        "any",
        "Number",
        "number",
        "String",
        "string",
        "Boolean",
        "boolean",
        "Undefined",
        "undefined"
      ],
      "id-match": "error",
      "no-eval": "error",
      "no-redeclare": "error",
      "no-trailing-spaces": "error",
      "no-underscore-dangle": "error",
      "no-var": "error",
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "bin/",
    "node_modules/",
    "obj/",
    "wwwroot/"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
