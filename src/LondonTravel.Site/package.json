{
  "name": "london-travel-site",
  "private": true,
  "type": "module",
  "version": "10.0.0",
  "description": "The companion site for the London Travel Amazon Alexa skill",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint",
    "compile": "webpack",
    "format": "prettier --write assets/**/*.ts && stylelint --fix lax assets/*/*.css",
    "format-check": "prettier --check assets/**/*.ts && stylelint assets/*/*.css",
    "lint": "eslint assets",
    "test": "vitest run",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/alexa-london-travel-site.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "7.28.6",
    "@babel/preset-env": "7.28.6",
    "@stylistic/eslint-plugin": "5.7.1",
    "@types/jsdom": "27.0.0",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.4",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "globals": "17.1.0",
    "jsdom": "27.4.0",
    "mini-css-extract-plugin": "2.10.0",
    "moment": "2.30.1",
    "prettier": "3.8.1",
    "style-loader": "4.0.0",
    "stylelint-config-standard": "40.0.0",
    "ts-loader": "9.5.4",
    "tsify": "5.0.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1",
    "webpack-remove-empty-scripts": "1.1.1"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
