{
  "name": "london-travel-site",
  "private": true,
  "type": "module",
  "version": "9.0.0",
  "description": "The companion site for the London Travel Amazon Alexa skill",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint",
    "compile": "webpack",
    "format": "prettier --write assets/**/*.ts && stylelint --fix lax assets/*/*.css",
    "format-check": "prettier --check assets/**/*.ts && stylelint assets/*/*.css",
    "lint": "eslint assets",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/alexa-london-travel-site.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "7.27.7",
    "@babel/preset-env": "7.27.2",
    "@stylistic/eslint-plugin": "5.1.0",
    "@typescript-eslint/eslint-plugin": "8.35.1",
    "@typescript-eslint/parser": "8.35.1",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.2",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "globals": "16.3.0",
    "mini-css-extract-plugin": "2.9.2",
    "moment": "2.30.1",
    "prettier": "3.6.2",
    "style-loader": "4.0.0",
    "stylelint": "16.21.0",
    "stylelint-config-standard": "38.0.0",
    "ts-loader": "9.5.2",
    "tsify": "5.0.4",
    "typescript": "5.8.3",
    "webpack": "5.99.9",
    "webpack-cli": "6.0.1",
    "webpack-remove-empty-scripts": "1.1.1"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
